@model IEnumerable<DoAnLTW.Models.Product>

@{
    ViewBag.Title = "ProductNew";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="content-wrapper">
    <!-- Danh Sách Sản Phẩm Mới -->
    <div class="card">
        <h5 class="card-header">Sản Phẩm Mới</h5>
        <div class="table-responsive text-nowrap">

            @if (Model != null && Model.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID Sản Phẩm</th>
                            <th>Tên Sản Phẩm</th>
                            <th>Hình ảnh</th>
                            <th>Loại Sản Phẩm</th>
                            <th>Hãng SX</th>
                            <th>Giá Nhập</th>
                            <th>Ngày Nhập</th>
                            <th>Số Lượng</th>
                            <th>Nhà Cung Cấp</th>
                            <th>Trạng Thái</th>
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var product in Model)
                        {
                            <tr onclick="location.href='@Url.Action("EditProduct", "Admin", new { id = product.ProductId })'" style="cursor: pointer;">
                                <td>@product.ProductId</td>
                                <td>@product.ProductName</td>
                                <td>
                                    <img src="@product.ImageUrl" alt="@product.ProductName" style="width: 100px; height: auto;" />
                                </td>
                                <td>@product.CategoryId</td>
                                <td>@product.Manufacturer</td>
                                <td>@product.Quantity</td>
                                <td>@product.Supplier</td>
                                <td>
                                    <span class="badge bg-label-@((product.Status == "1") ? "success" : "warning") me-1">
                                        @(product.Status == "1" ? "Hoạt Động" : "Ngừng Hoạt Động")
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            }
            else
            {
                <p>Không có sản phẩm nào để hiển thị.</p>
            }

        </div>
    </div>
    <!-- Danh Sách Sản Phẩm Mới -->

    <div class="content-backdrop fade"></div>
</div>

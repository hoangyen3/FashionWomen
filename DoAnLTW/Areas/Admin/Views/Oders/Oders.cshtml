@model IEnumerable<DoAnLTW.Models.Order>

@{
    ViewBag.Title = "Danh Sách Đơn Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="content-wrapper">
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger" role="alert">
            @TempData["ErrorMessage"]
        </div>
    }

    <div class="card">
        <h5 class="card-header">Danh Sách Đơn Hàng</h5>
        <div class="table-responsive text-nowrap">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID Đơn Hàng</th>
                        <th>Ngày Lên Đơn</th>
                        <th>Tên Khách Hàng</th>
                        <th>Giá Trị Đơn Hàng</th>
                        <th>Trạng Thái</th>
                        <th>Người Duyệt Đơn</th>
                        <th>Xem Đơn Hàng</th>
                    </tr>
                </thead>
                <tbody class="table-border-bottom-0">
                    @foreach (var order in Model)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.OrderDate</td>
                            <td>@order.Customer.FirstName @order.Customer.LastName</td>
                            <td>@order.TotalAmount</td>
                            <td><span class="badge bg-label-warning me-1">@order.Status</span></td>
                            <td>@order.ApprovedBy</td>
                            <td>
                                <a href="@Url.Action("OrderDetails", new { id = order.OrderId })" class="btn btn-info">Chi Tiết</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="content-backdrop fade"></div>
</div>

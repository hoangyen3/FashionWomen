
@{
    ViewBag.Title = "CreateAccount";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row">
            <div class="col-md-12">
                <div class="nav-align-top">
                    <ul class="nav nav-pills flex-column flex-md-row mb-6">
                        <li class="nav-item">
                            <a class="nav-link" href="ChiTietSanPham.html"><i class="bx bx-sm bx-detail me-1_5"></i> Đăng Ký Tài Khoản Mới</a>
                        </li>
                    </ul>
                </div>
                <div class="card mb-6">
                    <!-- Account -->
                    <div class="card-body">
                    </div>
                    <div class="card-body pt-4">
                        <form id="formAccountSettings" method="POST" onsubmit="return false">
                            <div class="row g-6">
                                <div class="col-md-6">
                                    <label for="firstName" class="form-label">ID </label>
                                    <input class="form-control"
                                           type="text"
                                           id="firstName"
                                           name="firstName"
                                           autofocus />
                                </div>
                                <div class="col-md-6">
                                    <label for="lastName" class="form-label">Tên Tài Khoản</label>
                                    <input class="form-control" type="text" name="lastName" id="lastName" />
                                </div>
                                <div class="col-md-6">
                                    <label for="email" class="form-label">Email</label>
                                    <input class="form-control"
                                           type="text"
                                           id="email"
                                           name="email" />
                                </div>
                                <div class="col-md-6">
                                    <label for="organization" class="form-label">Tên Đăng Nhập</label>
                                    <input type="text"
                                           class="form-control"
                                           id="organization"
                                           name="organization" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label" for="phoneNumber">Mật Khẩu</label>
                                    <div class="input-group input-group-merge">
                                        <input type="text"
                                               id="phoneNumber"
                                               name="phoneNumber"
                                               class="form-control" />
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Số Điện Thoại</label>
                                    <input type="text" class="form-control" id="address" />
                                </div>
                                <div class="col-md-6">
                                    <label for="language" class="form-label">Loại Tài Khoản</label>
                                    <select id="language" class="select2 form-select">
                                        <option value="">Chọn</option>
                                        <option value="en">Nhân Viên</option>
                                        <option value="fr">Khách Hàng</option>
                                        <option value="de">Quản Lý</option>
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label for="currency" class="form-label">Trạng Thái</label>
                                    <select id="currency" class="select2 form-select">
                                        <option value="">Đã Khóa</option>
                                        <option value="euro">Hoạt Động</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mt-6">
                                <button type="submit" class="btn btn-primary me-3">Thêm Tài Khoản</button>
                                <button type="reset" class="btn btn-outline-secondary">Trở Về</button>
                            </div>
                        </form>
                    </div>
                    <!-- /Account -->
                </div>
            </div>
        </div>
    </div>
    <!-- / Content -->
    <div class="content-backdrop fade"></div>
</div>
<!-- Content wrapper -->
